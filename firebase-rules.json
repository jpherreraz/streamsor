{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": false,
    ".write": false,
    "streams": {
      ".read": "auth != null",
      ".write": false,
      "$streamId": {
        ".read": true,
        ".write": "auth != null",
        "title": {
          ".validate": "newData.isString()"
        },
        "streamerName": {
          ".validate": "newData.isString()"
        },
        "viewerCount": {
          ".validate": "newData.isNumber()"
        },
        "isLive": {
          ".validate": "newData.isBoolean()"
        },
        "startedAt": {
          ".validate": "newData.isNumber()"
        },
        "streamKey": {
          ".validate": "newData.isString()"
        },
        "streamId": {
          ".validate": "newData.isString()"
        },
        "userId": {
          ".validate": "newData.val() === auth.uid"
        }
      }
    },
    "chats": {
      "$streamId": {
        "messages": {
          ".read": "auth != null",
          ".write": false
        },
        "moderation": {
          ".read": "auth != null",
          ".write": false
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    }
  }
}